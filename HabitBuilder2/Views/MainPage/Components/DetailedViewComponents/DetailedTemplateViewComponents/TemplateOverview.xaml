<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitBuilder2.Views.MainPage.Components.DetailedViewComponents.DetailedTemplateViewComponents.TemplateOverview">




        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Text="{Binding Title}" HorizontalOptions="Center" FontSize="20"></Label>
            <Label Grid.Row="1" Text="Maybe put the calender here? Or graphs? Who knows? Not you clearly."></Label>
            <Grid Grid.Row="3" BackgroundColor="Red" VerticalOptions="FillAndExpand">
                <Label  Text="{Binding Description}" HorizontalOptions="Center"></Label>
        </Grid>
        </Grid>
   




</ContentView>