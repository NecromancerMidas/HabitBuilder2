<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitBuilder2.Views.MainPage.Components.DetailedViewComponents.SpecificHabitOverview">
    <VerticalStackLayout>
        <VerticalStackLayout>
                <Label Text="{Binding Title}" HorizontalOptions="Center"/>
                <Label Text="{Binding Level,StringFormat='Level.{0}'}" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Progress"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentView>