<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:HabitBuilder2.Views.MainPage.Components.DetailedViewComponents"
             x:Class="HabitBuilder2.Views.MainPage.DetailedView">


<VerticalStackLayout Spacing="10">
    <Label Text="Remember to remove carouselview here and move it to its children, and instead use logic here to decide what to show."></Label>
    <CarouselView
        ItemsSource="{Binding Templates}"
        ItemTemplate="{DataTemplate components:SpecificHabitOverview}"
        Margin="0"
        HeightRequest="275"
        BackgroundColor="Green"
        IndicatorView="CarouselTwoIndicator"
        x:Name="TestCarousel">
    </CarouselView>
    <IndicatorView x:Name="CarouselTwoIndicator" Margin="0" HorizontalOptions="Center"></IndicatorView>
</VerticalStackLayout>


</ContentView>